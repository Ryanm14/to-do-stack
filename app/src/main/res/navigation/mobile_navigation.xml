<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_tasks">

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="hack.gt.todostack.ui.tasks.TasksFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_tasks" />

    <fragment
        android:id="@+id/navigation_add_task"
        android:name="hack.gt.todostack.ui.addTask.AddTaskFragment"
        android:label="@string/title_add_task"
        tools:layout="@layout/fragment_add_task" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="hack.gt.todostack.ui.settings.SettingsFragment"
        android:label="@string/title_settings" />

</navigation>